<!--
This files contains the common docbook setting for the entire CoSMo DocBook documentation
This is the HTML part
-->
<xsl:stylesheet
    xmlns:xsl="http://www.w3.org/1999/XSL/Transform" version="1.0">
<!-- xsl:import elements must come first -->

<!--xsl:import href="/usr/share/xml/docbook/stylesheet/docbook-xsl/html/docbook.xsl"/-->
<!--xsl:import href="/usr/share/xml/docbook/stylesheet/docbook-xsl/html/chunkfast.xsl"/-->
<xsl:import href="@DOCBOOK_HTML_CHUNKFAST_XSL@"/>
@DOCBOOK_IMPORT_HTML_SYNTAX_HIGHLIGHTING@

<xsl:import href="@Documentation_SOURCE_DIR@/CMake/cosmodocbookcommon.xsl"/>

<!--xsl:output method="xml" indent="no" encoding="UTF-8"/-->

<!-- http://docbook.sourceforge.net/release/xsl/current/doc/fo/highlight.source.html -->
<xsl:param name="highlight.xslthl.config">file://@XSLTHL_CONFIG_XML@</xsl:param>
<xsl:param name="callout.graphics.path" select="'@DOCBOOK_XSL_DIRECTORY@/images/callouts/'"/>

<xsl:param name="html.stylesheet" select="'stylefab.css'"/>
<xsl:param name="chunk.tocs.and.lots" select="1"/>
<xsl:param name="chunk.quietly" select="1"/>
<xsl:param name="section.autolabel" select="1"/>

<!-- firefox has still some issue with SVG, so use PNG instead -->
<xsl:param name="use.svg" select="0"/>
<xsl:param name="chunker.output.encoding">UTF-8</xsl:param>

</xsl:stylesheet>
